    "body-parser": "^1.20.2",
    "chokidar": "^3.6.0",
    "cors": "^2.8.5",
    "cozo-node": "^0.7.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.1",
    "node-llama-cpp": "^3.14.5"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "pkg": "^5.8.1"
