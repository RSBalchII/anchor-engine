{
  "name": "sovereign-context-engine",
  "version": "3.0.0",
  "description": "Headless Context Engine & Knowledge Graph",
  "main": "src/index.js",
  "bin": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js",
    "migrate": "node src/migrate_history.js",
    "read-all": "node src/read_all.js",
    "hydrate": "node src/hydrate.js",
    "test": "node tests/comprehensive_suite.js",
    "test:unit": "node tests/comprehensive_suite.js",
    "test:integration": "node tests/comprehensive_suite.js",
    "test:errors": "node tests/comprehensive_suite.js",
    "test:all": "node tests/comprehensive_suite.js",
    "benchmark": "node tests/benchmark.js",
    "build": "pkg .",
    "lint": "eslint src/ --ext .js",
