# .env
# Finalized Environment Variables for ECE

# --- Neo4j Connection (For our application's knowledge graph) ---
NEO4J_URI="neo4j://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="your_neo4j_password"

# --- UTU Framework Configuration ---
UTU_LLM_TYPE="ollama"
UTU_LLM_MODEL="deepseek-r1:14b-qwen-distill-q4_K_M"
UTU_LLM_BASE_URL="http://localhost:11434"
UTU_LLM_API_KEY="sk-dummy-key"

# --- UTU Internal Database (Using SQLite) ---
# This is for the framework's internal tracing and caching, NOT our knowledge graph.
DB_URL="sqlite:///utu_internal.db"

# --- Redis Cache Configuration ---
REDIS_URL="redis://localhost:6379"
REDIS_MAX_CONNECTIONS=100
REDIS_CACHE_TTL=3600
REDIS_CACHE_SIZE_MB=32768

# --- GPU Configuration ---
CUDA_DEVICE="0"
CUDA_MEMORY_FRACTION=0.8
GPU_BATCH_SIZE=32
GPU_MIXED_PRECISION="true"

# --- Q-Learning Configuration ---
QL_LEARNING_RATE=0.1
QL_DISCOUNT_FACTOR=0.9
QL_EPSILON=0.1
QL_MAX_EPISODES=1000
QL_MAX_HOPS=5

# --- Performance Configuration ---
MAX_CONCURRENT_QUERIES=100
QUERY_TIMEOUT_SECONDS=5
CACHE_WARMUP_ON_START="true"
CONNECTION_POOL_SIZE=50

# --- Memory Management ---
CONTEXT_MAX_TOKENS=4096
EMBEDDING_MODEL="all-MiniLM-L6-v2"
SUMMARIZATION_STRATEGY="progressive"
